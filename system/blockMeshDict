FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;

vertices
(
    // Back (Smaller z value)
    (0   0  -0.1)   // 0
    (5   0  -0.1)   // 1
    (0   2  -0.1)   // 2
    (5   2  -0.1)   // 3
    // Front (Greater z value)
    (0   0   0.1)   // 4
    (5   0   0.1)   // 5
    (0   2   0.1)   // 6
    (5   2   0.1)   // 7
);

blocks
(
    // CCW
   	hex (0 1 3 2 4 5 7 6) (100  40 1) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
   	inlet
   	{
        type patch;
      	faces
        (
            // Left-hand rule
            (0 2 6 4)
        );
    }

    outlet
    {
        type patch;
        faces
        (
            (3 1 5 7)
        );
    }

    wall
    {
		type wall;
		faces
		(
			(3  7 2 6)
			(0  4 5 1)
		);
	}

	frontAndBack
	{
		type empty;
		faces
		(
			// Back
			(0 1 3 2)
			// Front
			(4 6 7 5)
		);
	}
);

mergePatchPairs
(
);

