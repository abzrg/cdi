FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;

// Dimensions of the channel
h   2;  // Height
l   5;  // Lenght

vertices
(
    // Back
    (0   0  -0.1)
    ($l  0  -0.1)
    (0   $h -0.1)
    ($l  $h -0.1)
    // Front
    (0   0   0.1)
    ($l  0   0.1)
    (0   $h  0.1)
    ($l  $h  0.1)
);

blocks
(
   	hex (0 1 3 2 4 5 7 6) (100 40 1) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
   	inlet
   	{
        type patch;
      	faces
        (
            (0 4 6 2)
        );
    }
    outlet
    {
        type patch;
        faces
        (
            (1 3 7 5)
        );
    }
    upper_wall
    {
		type wall;
		faces
		(
			(3 2 6 7)
		);
	}
    lower_wall
    {
		type wall;
		faces
		(
			(0 1 5 4)
		);
    }
	frontAndBack
	{
		type empty;
		faces
		(
			// Back
			(0 2 3 1)
			// Front
			(4 5 7 6)
		);
	}
);

mergePatchPairs
(
);

